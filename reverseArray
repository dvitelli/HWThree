#include <stdio.h>
#include <stdlib.h>

int main(void){

	int arraySize, entry;

	printf("Enter your array size: ");
	fflush(stdout);
	scanf("%d", &arraySize);

	int array[arraySize];

	for(int i = 0; i < arraySize; i++){

		printf("\nEnter an int to add to your array: ");
		fflush(stdout);
		scanf("%d", &entry);
		array[i] = entry;


	}	

	reverseArray(array, arraySize);

	for(int i = 0; i < arraySize; i++){

		printf("\nThis is your array reverse: ");
		printf("\n%d", array[i]);
		
	}

	return 0;

	
} int *reverseArray(int array[], int arraySize){

	int *reverseArray = malloc(arraySize*sizeOf(int));

	for (int i = 0; i < arraySize; i ++){

		reverseArray[arraySize - 1] = array[i];

	}

	return (reverseArray);


}
